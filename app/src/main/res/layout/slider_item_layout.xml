<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/slider_item_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/slider_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"/>
        <ImageView
            android:id="@+id/pushOnOff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/slider_push_off_btn"
            android:layout_marginLeft="60dp"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            android:onClick="changeOnOff"/>
    </LinearLayout>
    <View
        android:id="@+id/slider_item_under"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_height="0.5dp"
        android:background="#5ebbef"
        android:layout_gravity="center"
        android:layout_width="wrap_content" />
</LinearLayout>