<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#b7b7b7">
    <TextView
        android:id="@+id/support_message_title"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="25dp"
        android:text="제목"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <TextView
        android:id="@+id/support_message_username"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="게시자"
        android:textSize="25dp"
        android:layout_marginRight="100dp"/>
    <ImageView
        android:id="@+id/support_message_reply_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/common_backbtn"
        android:background="#000000" />
        <TextView
            android:id="@+id/support_message_reply"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="2"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/support_message_content"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"/>
</LinearLayout>