<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/support_message_title_label"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:text="제목: "
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/support_message_title"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:maxLength="15"
                android:text="제목"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/support_message_reply_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center_vertical|right"
                android:scaleType="centerCrop"
                android:src="@drawable/support_message_reply_icon" />

            <TextView
                android:id="@+id/support_message_reply"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/support_message_username_label"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:text="게시자: "
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/support_message_username"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:maxLength="15"
                android:text="게시자"
                android:textSize="15dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#22000000"/>
        <TextView
            android:id="@+id/support_message_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="135dp"
            android:background="#ffffff"
            android:maxLines="5"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#1A629C" />
</LinearLayout>