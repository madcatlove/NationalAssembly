<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4EFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/reply_item_username"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:maxLength="12"
            android:text="test"
            android:textSize="12dp"
            android:textColor="#3A5598"/>

        <TextView
            android:id="@+id/reply_item_content"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/reply_item_username"
            android:maxLength="30"
            android:text="test"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/reply_item_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/reply_item_username"
            android:textSize="9dp"
            android:textColor="#CCCCCC"
            android:text="123123123123" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>
</LinearLayout>