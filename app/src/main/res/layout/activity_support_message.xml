<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A629C"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:context=".SupportMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#464646">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:onClick="gotoback"
            android:scaleType="centerInside"
            android:src="@drawable/common_backbtn" />

        <TextView
            android:id="@+id/support_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="건의사항 및 격려메시지를 남겨주세요"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout
        android:background="#1A629C"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/support_message_write"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#1A629C"
            android:drawableRight="@drawable/support_message_content_reply_icon"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="글쓰기"
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/support_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />
</LinearLayout>
